{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "target": "ES2020",
    "module": "ES2020",
    "allowJs": true,
    "checkJs": true,
    "lib": [
      "DOM",
      "ES2021"
    ],
    "moduleResolution": "node",
    "importsNotUsedAsValues": "error",
    "forceConsistentCasingInFileNames": true
  }
}